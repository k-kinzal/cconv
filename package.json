{
  "name": "reviewit",
  "version": "1.0.0",
  "description": "A code review tool powered by AI",
  "bin": {
    "reviewit": "./dist/bin/reviewit.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/bin/reviewit.ts",
    "start": "tsx src/bin/reviewit.ts",
    "reviewit": "tsx src/bin/reviewit.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build && npm run test"
  },
  "keywords": [
    "review",
    "code-review",
    "cli",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-kinzal/reviewit.git"
  },
  "bugs": {
    "url": "https://github.com/k-kinzal/reviewit/issues"
  },
  "homepage": "https://github.com/k-kinzal/reviewit#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/sarif": "^2.1.7",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "minimatch": "^10.0.3",
    "node-sarif-builder": "^3.2.0",
    "p-limit": "^6.1.0",
    "parse-git-diff": "^0.0.19",
    "picocolors": "^1.1.1",
    "valibot": "^0.31.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.36.0"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  }
}
